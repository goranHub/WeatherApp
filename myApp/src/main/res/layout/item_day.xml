<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_day"
                style="@style/CustomStyle.Text.Primary"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:letterSpacing="0.08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Monday" />


            <ImageView
                android:id="@+id/iv_weather"
                style="@style/CustomStyle.ImageView"
                android:layout_width="78dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/rain" />

            <TextView
                android:id="@+id/tv_max_temp"
                style="@style/CustomStyle.Text.Primary"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_day"
                tools:text="maxTemp" />

            <TextView
                android:id="@+id/tv_max_value"
                style="@style/CustomStyle.Text.Primary"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="maxValue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_max_temp" />

            <TextView
                android:id="@+id/textView6"
                style="@style/CustomStyle.Text.Primary"
                android:layout_marginTop="8dp"
                android:text="°"
                app:layout_constraintStart_toEndOf="@+id/tv_max_value"
                app:layout_constraintTop_toBottomOf="@+id/tv_max_temp" />


            <TextView
                android:id="@+id/tv_min_temp"
                style="@style/CustomStyle.Text.Primary"
                android:layout_marginStart="12dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_max_temp"
                app:layout_constraintStart_toEndOf="@+id/tv_max_temp"
                tools:text="minTemp" />

            <TextView
                android:id="@+id/tv_min_value"
                style="@style/CustomStyle.Text.Primary"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="minValue"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/tv_min_temp" />

            <TextView
                style="@style/CustomStyle.Text.Primary"
                android:layout_marginTop="8dp"
                android:text="°"
                app:layout_constraintStart_toEndOf="@+id/tv_min_value"
                app:layout_constraintTop_toBottomOf="@+id/tv_max_temp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>