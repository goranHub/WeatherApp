<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="bind"
            type="com.example.weatherapp.ui.search.BindForecast" />
        <variable
            name="forecast"
            type="com.example.weatherapp.data.responseById.Forecast" />
    </data>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:background="@drawable/sun">

            <TextView
                android:id="@+id/time"
                style="@style/CustomStyle.Text.Primary"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:letterSpacing="0.08"
                android:text="@{bind.time}"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="23:00" />

            <ImageView
                android:id="@+id/iv_weather"
                style="@style/CustomStyle.ImageView"
                android:layout_width="135dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/time"
                app:loadImageDetails="@{bind.imageUrlForecast}"
                tools:src="@drawable/rain" />

            <TextView
                android:id="@+id/temperature"
                style="@style/CustomStyle.Text.Primary"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_weather"
                android:textStyle="bold"
                android:text="@{forecast.main.temp}"
                tools:text="-10" />

            <TextView
                style="@style/CustomStyle.Text.Primary"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:text="Â°"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/temperature"
                app:layout_constraintTop_toBottomOf="@+id/iv_weather" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>