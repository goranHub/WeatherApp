<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/weatherFragment">


    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.example.current.WeatherFragment"
        android:label="WeatherFragment" >
        <action
            android:id="@+id/action_weatherFragment_to_nav_graph_detail_feature"
            app:destination="@id/nav_graph_detail_feature" />
        <argument android:name="weather" app:argType="string"/>
    </fragment>


    <include app:graph="@navigation/nav_graph_home_feature"/>
</navigation>